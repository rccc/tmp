{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}
{% block page_title %}Utilisateur{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-12">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Identifiant</th>
                        <td>{{ user.username }}</td>
                    </tr>
                    <tr>
                        <th>Roles</th>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    </tr>
                    <tr>
                        <th>Prénom</th>
                        <td>{{ user.firstname }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ user.lastname }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <a href="{{ path('app_user_edit', {'id': user.id}) }}">Éditer</a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
