<aside class="l-aside is-narrow is-pinned is-collapsed" data-aside-panel-target="panel">
        
    <div class="row">
        <div class="col-12">
            <header>
                <p class="pt-1">
                    {# <button class="js-aside-pin is-dense" data-action="aside-panel#togglePin">Pin</button> #}
                    <button class="is-dense" data-action="aside-panel#close">Fermer</button>
                </p>

                {#                 
                    <p><button class="is-inline is-dense js-aside-resize" data-resize-class="is-narrow" aria-controls="aside-panel" data-action="aside-panel#narrow">narrow</button> <button class="is-dense is-inline js-aside-resize" data-resize-class="" aria-controls="aside-panel"  data-action="aside-panel#default">default</button> <button class="is-dense is-inline js-aside-resize" data-resize-class="is-wide" aria-controls="aside-panel" data-action="aside-panel#wide">wide</button></p>
                 #}

            </header>

            <main data-controller="search-options">
            
                {% block aside_panel_body %}

                    <h3>Colonnes</h3>
                    
                    <form>
                    
                        {% for item in form %}
                            {% if item.vars.label %}
                                <label class="p-checkbox no-text-indent p-0">
                                    <input 
                                        type="checkbox" 
                                        aria-labelledby="{{ item.vars.label }}" 
                                        value="{{ item.vars.label }}" 
                                        class="p-checkbox__input" 
                                        data-options-name="{{ item.vars.full_name }}"
                                        checked>
                                    <span class="p-checkbox__label" id="option_{{ item.vars.label }}">
                                        {{ item.vars.label }}
                                    </span>
                                </label>
                            {% endif %}
                        {% endfor %}

                    </form>

                {% endblock %}   

            </main>

        </div>
    </div>

</aside>